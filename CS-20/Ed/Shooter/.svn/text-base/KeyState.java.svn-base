
public class KeyState {
	boolean leftKey;
	boolean rightKey;
	boolean upKey;
	boolean downKey;
	boolean spaceBar;
	boolean shiftKey;
    boolean w, a, s, d;


	public KeyState()	{
		w = a = s = d = leftKey = rightKey = upKey = downKey = false;
	}
    
	public void setShift(boolean shift)	{
		shiftKey = shift;
	}
	
	public boolean shift()	{
		return shiftKey;
	}
	
	public void setLeft(boolean left)	{
		leftKey = left;
	}

	public void setRight(boolean right)	{
		rightKey = right;
	}
	
	public void setUp(boolean up)	{
		upKey = up;
	}

	public void setDown(boolean down)	{
		downKey = down;
	}
	
	public void setSpace(boolean space)	{
		spaceBar = space;
	}
    
    public void setA(boolean an)  {
        a = an;
    }
    
    public void setD(boolean ad) {
        d = ad;
    }
    
    public void setS(boolean as)  {
        s = as;
    }
    
    public void setW(boolean aw) {
        w = aw;
    }

	public boolean space()	{
		return spaceBar;
	}

	public boolean left()	{
		return leftKey;
	}

	public boolean right()	{
		return rightKey;
	}
	
	public boolean up()	{
		return upKey;
	}

	public boolean down()	{
		return downKey;
	}
    
    public boolean a()  {
        return a;
    }
    
    public boolean d()  {
        return d;
    }
    
    public boolean w()  {
        return w;
    }
    
    public boolean s()  {
        return s;
    }
    
}